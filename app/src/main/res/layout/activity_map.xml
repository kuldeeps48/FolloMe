<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/map_main_layout"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="start|top"
        android:layout_width="50dp"
        android:src="@drawable/pull_right"
        android:layout_height="50dp" />

    <fragment
        android:layout_marginTop="50dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.theeralabs.follome.view.map.MapActivity" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="end|top"
        android:layout_marginEnd="8dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape"
        android:elevation="3dp"
        android:textColor="#cccccc"
        android:text="Logout" />

    <TextView
        android:id="@+id/txt_hello_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="12dp"
        android:text="Hello, TestName"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_swipe_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="45dp"
        android:layout_marginTop="17dp"
        android:text="Swipe Right"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic" />
</FrameLayout>
